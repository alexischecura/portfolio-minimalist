---
import './Experience.style.css';

const { currentLocale = 'en' } = Astro;
import { getI18n } from '../i18n';
const i18n = getI18n({ currentLocale });
---

<section class="experience">
  <h2 class="section-title">{i18n.experience.title}</h2>
  <div class="timeline">
    <ul class="timeline-list">
      <li class="timeline-card">
        <span class="timeline-icon">
          <svg
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-6 h-6"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M12 9v3.75m0-10.036A11.959 11.959 0 0 1 3.598 6 11.99 11.99 0 0 0 3 9.75c0 5.592 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.57-.598-3.75h-.152c-3.196 0-6.1-1.25-8.25-3.286Zm0 13.036h.008v.008H12v-.008Z"
            ></path>
          </svg>
        </span>
        <span class="timeline-date">{i18n.experience.experience_1.date}</span>
        <div class="content">
          <h3 class="timeline-title">
            {i18n.experience.experience_1.title}
          </h3>
          <p class="timeline-text">
            {i18n.experience.experience_1.description}
          </p>
        </div>
      </li>
      <li class="timeline-card">
        <span class="timeline-icon">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-6 h-6"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z"
            ></path>
          </svg>
        </span>
        <span class="timeline-date">{i18n.experience.experience_2.date}</span>
        <div class="content">
          <h3 class="timeline-title">
            {i18n.experience.experience_2.title}
          </h3>
          <p class="timeline-text">
            {i18n.experience.experience_2.description}
          </p>
        </div>
      </li>
    </ul>
  </div>
</section>
